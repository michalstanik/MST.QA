<StackPanel x:Class="MST.WPFApp.Shell.Views.RightTitlebarCommands"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:inf="clr-namespace:MST.WPFApp.Infrastructure;assembly=MST.WPFApp.Infrastructure"
             xmlns:constants="clr-namespace:MST.WPFApp.Infrastructure.Constants;assembly=MST.WPFApp.Infrastructure"
             xmlns:prism="http://www.codeplex.com/prism"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:local="clr-namespace:MST.WPFApp.Shell.Views"
             mc:Ignorable="d" 
             VerticalAlignment="Center"
             d:DesignHeight="30" d:DesignWidth="300">
    <Button Command="{x:Static inf:ApplicationCommands.ShowFlyoutCommand}"
            CommandParameter="{x:Static constants:FlyoutNames.ShellSettingsFlyout}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="4 0 0 0"
                       VerticalAlignment="Center"
                       Text="Settings" />
        </StackPanel>
    </Button>
</StackPanel>
